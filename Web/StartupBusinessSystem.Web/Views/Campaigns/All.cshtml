@model StartupBusinessSystem.Web.ViewModels.Campaigns.ListCampaignsViewModel
@{
    ViewBag.Title = "All";
}

<h2>All</h2>

<div class="container">
    <div class="row">

        @foreach (var campaign in Model.CampaignsList)
        {
            <div class="jumbotron col-lg-12">
                <article>
                    <header>
                        <h2>
                            @Html.ActionLink(@campaign.Name, "Details", "Campaigns", new { @id = campaign.Id }, null)
                        </h2>
                    </header>

                    <footer>
                        <div class="pull-right">
                            <p>Status: @campaign.Status</p>
                            <p>Goal Price: @campaign.GoalPrice</p>
                            <p>@campaign.CreatedOn.Day.@campaign.CreatedOn.Month.@campaign.CreatedOn.Year</p>
                            <small class="author">
                                --Created By @campaign.UsernameAsString
                            </small>
                        </div>
                    </footer>
                    <div class="container">
                        <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#@campaign.Id">Description</button>
                        <div id="@campaign.Id" class="collapse">
                            <h5>@campaign.Description</h5>
                        </div>
                    </div>
                </article>
            </div>
        }
    </div>
</div>

<div class="text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination ">
            @if (Model.CurrentPage > 1)
            {
                <li>
                    <a href="/Campaigns/All?page=@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                var className = string.Empty;
                if (Model.CurrentPage == i)
                {
                    className = "active";
                }

                <li class="@className"><a href="/Campaigns/All?page=@i">@i</a></li>
            }

            @if (Model.CurrentPage < Model.PagesCount)
            {
                <li>
                    <a href="/Campaigns/All?page=@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

